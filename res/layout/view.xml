                        android:id="@+id/imageView3"
                        android:src="@drawable/first"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="right"
                        android:scaleType="centerCrop"
                        android:clickable="true"/>

